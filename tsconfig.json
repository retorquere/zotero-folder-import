{
  "compilerOptions": {
    "declaration": false,
    "allowUnreachableCode": false,
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [ "es2019", "dom" ],
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [ "bootstrap.ts", "content/folder-import.ts", "content/globals.d.ts" ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
